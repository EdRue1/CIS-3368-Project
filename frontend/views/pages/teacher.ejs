<%- include('../template/head')-%>

<body class="text-center">
    <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
        <%- include('../template/nav')-%>
        <!-- Tab links -->
        <!-- info on tabs https://www.w3schools.com/howto/howto_js_tabs.asp-->
        <div class="container bg-light text-dark">
            <h4 class="cover-heading">Data might not immediately update. If it does not then click the name of the table in the nav bar to update</h1>
                <div class="tab">
                    <button class="tablinks" onclick="openTab(event, 'All')">All</button>
                    <button class="tablinks" onclick="openTab(event, 'Single')">Single</button>
                    <button class="tablinks" onclick="openTab(event, 'Add')">Add</button>
                    <button class="tablinks" onclick="openTab(event, 'Update')">Update</button>
                    <button class="tablinks" onclick="openTab(event, 'Delete')">Delete</button>
                </div>


            <!-- Tab content -->
            <div id="All" class="tabcontent">
                <!-- All teachers -->
            <h1 class="cover-heading">All teachers</h1>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <!-- <th>ID</th> -->
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Room</th>
                    </tr>
                </thead>
                <tbody>
                    <%locals.teacher.forEach(function(entry) {%>
                    <tr>
                        <!-- <td><%=entry.id%></td> -->
                        <td><%=entry.firstname%></td>
                        <td><%=entry.lastname%></td>
                        <td><%=entry.room%></td>
                    </tr>
                    <%});%>
                </tbody>
            </table>
            </div>
            <div id="Single" class="tabcontent">
                <!-- Single teacher -->
            <h1 class="cover-heading">Choose a teacher</h1>
            <h4 class="cover-heading">Page will refresh once the ID is selected. Click on the "Single" tab to view once refreshed.</h4>
                    <form action="/s_teacher" method="post">
                        <div class="form-group">
                            <label for="IdtoSearch" class="form-label">ID</label>
                            <input type="text" id="IdtoSearch" name="IdtoSearch" class="form-control" placeholder="IdtoSearch" required
                            autofocus>
                        </div>
                        <input class="btn btn-lg btn-primary btn-block" type="submit">
                        </form>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <!-- <th>ID</th> -->
                                    <th>First Name</th>
                                    <th>Last Name</th>
                                    <th>Room</th>
                                </tr>
                                <% if (locals.s_teacher && locals.s_teacher.length > 0) { %>
                                    <% locals.s_teacher.forEach(function(s_entry) { %>
                                      <tr>
                                        <!-- <td><%= s_entry.id %></td> -->
                                        <td><%= s_entry.firstname%></td>
                                        <td><%= s_entry.lastname %></td>
                                        <td><%= s_entry.room%></td>
                                      </tr>
                                    <% }); %>
                                  <% } else { %>
                                    <tr>
                                      <td colspan="2">No teacher found with that ID.</td>
                                    </tr>
                                  <% }; %>
                            </tbody>
                        </table>
            </div>
            <div id="Add" class="tabcontent">
                <!-- Add a teacher -->
                    <h1 class="cover-heading">Add a teacher</h1>
                    <form action="/a_teacher" method="post">
                        <div class="form-group">
                            <label for="Newteacf" class="form-label">New Teacher First Name</label>
                            <input type="text" id="fnamtoadd" name="fnamtoadd" class="form-control" placeholder="fnamtoadd" required
                            autofocus>
                            <label for="Newteacl" class="form-label">New Teacher Last Name</label>
                            <input type="text" id="lnamtoadd" name="lnamtoadd" class="form-control" placeholder="lnamtoadd" required
                            autofocus>
                            <label for="Newroomadd" class="form-label">Room to add to</label>
                            <input type="text" id="clrmtoadd" name="clrmtoadd" class="form-control" placeholder="clrmtoadd" required
                            autofocus>
                        </div>
                        <input class="btn btn-lg btn-primary btn-block" type="submit">
                        </form>
            </div>
            <div id="Update" class="tabcontent">
                <!-- Update a teacher -->
                    <h1 class="cover-heading">Update a teacher</h1>
                    <form action="/u_teacher" method="post">
                        <div class="form-group">
                            <label for="TeachIDUP" class="form-label">Teacher ID to update</label>
                            <input type="text" id="idtoupdate" name="idtoupdate" class="form-control" placeholder="idtoupdate" required
                            autofocus>
                            <label for="Updatetofname" class="form-label">Teacher First Name to Update</label>
                            <input type="text" id="fnamtoupdate" name="fnamtoupdate" class="form-control" placeholder="fnamtoupdate" required
                            autofocus>
                            <label for="Updatetolname" class="form-label">Teacher Last Name to Update</label>
                            <input type="text" id="lnamtoupdate" name="lnamtoupdate" class="form-control" placeholder="lnamtoupdate" required
                            autofocus>
                            <label for="UpdatetoClrm" class="form-label">Classroom to update</label>
                            <input type="text" id="clrmtoupdate" name="clrmtoupdate" class="form-control" placeholder="clrmtoupdate" required
                            autofocus>
                        </div>
                        <input class="btn btn-lg btn-primary btn-block" type="submit">
                        </form>
            </div>
            <div id="Delete" class="tabcontent">
                <!-- Delete a teacher -->
                    <h1 class="cover-heading">Delete a teacher</h1>
                    <form action="/d_teacher" method="post">
                        <div class="form-group">
                            <label for="DelTeaId" class="form-label">Del teacher id</label>
                            <input type="text" id="teatodel" name="teatodel" class="form-control" placeholder="teatodel" required
                            autofocus>
                        </div>
                        <input class="btn btn-lg btn-primary btn-block" type="submit">
                        </form>
            </div>

        </div>

        <%- include('../template/footer')-%>
    </div>
</body>
<script>
    //Set active nav link 
    window.onload = function() {
        document.getElementById('teacher').classList.add('active');
      };

    function openTab(evt, cityName) {
    // Declare all variables
    var i, tabcontent, tablinks;

    // Get all elements with class="tabcontent" and hide them
    tabcontent = document.getElementsByClassName("tabcontent");
    for (i = 0; i < tabcontent.length; i++) {
        tabcontent[i].style.display = "none";
    }

    // Get all elements with class="tablinks" and remove the class "active"
    tablinks = document.getElementsByClassName("tablinks");
    for (i = 0; i < tablinks.length; i++) {
        tablinks[i].className = tablinks[i].className.replace(" active", "");
    }

    // Show the current tab, and add an "active" class to the button that opened the tab
    document.getElementById(cityName).style.display = "block";
    evt.currentTarget.className += " active";
}
</script>
</html>